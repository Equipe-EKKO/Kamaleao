{% extends "base_home.html.twig" %}
{% block config_perfil %}
{# document #}
   {# head #}
      {% block title %} Configuração de Perfil {% endblock title %}
      {% block hrefcss %}"/GitHub/Kamaleao/app/public/View/pós_login/style/config_perfil.css"{% endblock hrefcss %}
      {% block srcjs %}"/GitHub/Kamaleao/app/public/View/pós_login/js/config_perfil.js"{% endblock srcjs %}
   {# endhead #}
   {# body #}
      <!-- header da página definida em base_perfil -->


      <!-- conteudo da pagina -->
      {% block div_container %}
      <noscript>
        <meta http-equiv="refresh" content="0;url=/GitHub/Kamaleao/app/public/View/acesso_livre/index/index.html" />
      </noscript>
      <div id="md-pr" class="md-ct">
        <div class="md">
          <h3>Confirmação de senha</h3>
          <form id="confSenha" method="POST" action="">
            <p>Digite abaixo sua senha para fazer a confirmação.</p>
            <input type="password" id="senha" name="senha" />
            <button type="submit" class="button" name="submit" id="button">Validar </button>
            {% block erro %}
                <p hidden class="form-message">
                    <i class="fas fa-exclamation-triangle"></i>
                </p>
        {% endblock erro %}
          </form>
        </div>
      </div>
      <div class="container">
        <main class="main-initial">
          <h1> Informações pessoais:</h1>
          <a class="icone_perf"><i class='bx bxs-user-circle'></i></a>
          <a class="cliqueperf" onclick="abreModal()"><h3>Nome de usuário:</h3></a>
          <p>@{{Usuario}}</p>
          <a class="cliqueperf" onclick="abreModal()"><h3>Descrição:</h3></a>
          {% if Descricao != null %}
          <p>{{Descricao}}</p>
          {% else %}
          <p> Você não possui uma descrição ainda!</p>
          {% endif %}
          <a class="cliqueperf" onclick="abreModal()"><h3>Email:</h3></a>
          <p>{{Email}}</p>
          <a class="cliqueperf" onclick="abreModal()"><h3>Chave pix:</h3></a>
          {% if ChavePix != null %}
          <p>{{ChavePix}}</p>
          {% else %}
          <p> Você não possui uma chave pix ainda!</p>
          {% endif %}
          <button class="modal-button" onclick="abreModal()">Alterar</button>
          <div class="modal-bg" id="modal-bg">
            <div class="md dois">
              <form method="POST" action="/GitHub/Kamaleao/app/private/Controller/controllerAlterarInformacoes.php">
                <h1> Alterar informações </h1>
                <p class="m2">Nome de usuário:</p>
                <input type="text" id="username" name="username" value={{Usuario}} />
                <p class="m2">Descrição:</p>
                <textarea id="descricao" name="descricao" rows="5" maxlength="280">{{Descricao}}</textarea>
                <p class="m2">Email:</p>
                <input type="text" id="email" name="email" value={{Email}} />
                <p class="m2">Chave pix:</p>
                <input type="text" id="chavepix" name="chavepix" {% if ChavePix != null %} value={{ChavePix}} {% endif %}/>
                <p class="m2">Senha:</p>
                <input type="password" id="senha" name="senha" />
                <p class="m2">Confirme sua senha:</p>
                <input type="password" id="confsenha" name="confsenha" />
                <button type="submit" class="botao" name="submit" >Alterar</button>
              </form>
            </div>
          </div>
        </main>
      </div>
      {% endblock div_container %}
{% endblock config_perfil %}