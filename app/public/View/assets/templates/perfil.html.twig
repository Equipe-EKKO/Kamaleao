{% extends "base_home.html.twig" %}
{% block perfil %}
{# document #}
   {# head #}
      {% block title %} Perfil {% endblock title %}
      {% block hrefcss %}"/GitHub/Kamaleao/app/public/View/pós_login/style/perfil.css"{% endblock hrefcss %}
      <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
      
   {# endhead #}
   {# body #}
      <!-- header da página definida em base_perfil -->
      {# nav-menu #}
         {# menu #}
         
         {# end menu #}
      
      {# end nav-menu #}  
      <!-- fim header -->
      <!-- filtro de pesquisa -->
      {# nav-filtro #}
      
      {# end nav-filtro #}
      <!-- fim filtro de pesquisa -->

      <!-- conteudo de perfil -->
      {% block perfil_icon %}
      <div class="perfil_icon">
         <a href="#" class="icone_perf"><i class='bx bxs-user-circle'></i></a>
         <h1> {{Usuario}} </h1>
      </div>
      {% endblock perfil_icon %}

      {% block div_container %}
      <div class="tab">
        <div><button id="bt1" class="tablinks" onclick="openTab(event, 'Inventário')"> <strong>inventário</strong> </button></div>
        <div><button id="bt2" class="tablinks" onclick="openTab(event, 'Sobre')"> <strong>sobre</strong> </button></div>
        <div><button id="bt3" class="tablinks" onclick="openTab(event, 'Comissao')"> <strong>comissões</strong></button></div>
      </div>

      <div class="all">
        <div id="Inventário" class="tabcontent">
          <p> Conteúdo do Inventário </p>
        </div>

        <div id="Sobre" class="tabcontent">
          <h1> Sobre <i class="fas fa-pen"></i> </h1>
            <p>{{Descricao}}</p>
        </div>

        <div id="Comissao" class="tabcontent">
          <p> Conteúdo da Comissão </p> 
        </div>

        <div class="clearfix"></div>

        <script>
        function openTab(evt, contentName) {
          var i, tabcontent, tablinks;
          tabcontent = document.getElementsByClassName("tabcontent");
          for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
          }
          tablinks = document.getElementsByClassName("tablinks");
          for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
          }
          document.getElementById(contentName).style.display = "block";
          evt.currentTarget.className += " active";
        }  
        </script>

      </div> <!--all-->
      {% endblock div_container %}
    
      <!-- fim conteudo de perfil -->   

      <!-- footer da página definida em base_perfil -->
      {# block div_footer #}
      {# end div_footer #}
      <!-- fim footer -->
   {# end body #}
{# end document #}
{% endblock perfil %}