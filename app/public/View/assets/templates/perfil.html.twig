                      {% endif %}
                    </div> <!-- abrir_comissao -->
                  {% endfor %}
              {% else %}
                <p>Você ainda não recebeu pedido de comissão :(</p>
              {% endif %}
            </div> <!--comissoes_recebidas-->

            <div class="line"></div>

            <h1>Pedidos realizados</h1>
            <div class="pedidos_realizados">
                {% if pedidos_feitos is defined %}
                  {% for pedido in pedidos_feitos %}
                    <div class="abrir_pedidos">
                        {% if pedido.valorpedido == null %}
                        <div class="edit_text" id="{{pedido.idpedido|e}}">
                          <h3>Pedido realizado dia {{pedido.datapedido}} | id: {{pedido.idpedido}}</h3>
                          <p id="atualUsername">pedido feito para @{{pedido.username}}.</p>
                          <p style="color:#F53446">Status: aguardando resposta do artista</p>
                        </div> <!-- edit_text -->
                        {% elseif pedido..valorpedido != null and pedido.indicadorconf == 0 %}
                        <div class="edit_text confPed" id="{{pedido.idpedido|e}}">
                          <h3>Pedido realizado dia {{pedido.datapedido}} | id: {{pedido.idpedido}}</h3>
                          <p id="atualUsername">pedido feito por @{{pedido.username}}</p>
                          <p style="color:#00a800">Status: aguardando sua confirmaçã</p>
                        </div> <!-- edit_text -->
                          
                        {% elseif pedido..valorpedido != null and pedido.indicadorconf == 1 %}
                        <div class="edit_text" id="{{pedido.idpedido|e}}">
                          <h3>Pedido realizado dia {{pedido.datapedido}} | id: {{pedido.idpedido}}</h3>
                          <p id="atualUsername">pedido feito por @{{pedido.username}}.</p>
                          <p style="color:#F53446">Status: em produção</p>
                        </div>
                         <!-- edit_text -->
                        {% endif %} 
                    </div> <!-- abrir_pedidos -->
                  {% endfor %}
                {% else %}
                  <p>Você ainda não fez nenhum pedido de comissão. :(</p>
                {% endif %}
                

              <div class="comission-bg">
                <div class="comission-modal">
                  <i class="fas fa-times-circle" id="iconfecha" onclick="fechaModal('add')"></i>
                    <h1>Titulo da comissao</h1>
                    <div class="txtarea"><p>Descricao aqui</p></div>
                    <div class="grid_button">
                      <button class="botao">Aceitar</button>
                      <button class="botao">Negar</button>
                      <div class="acc">
                        <input type="number" placeholder="insira o valor para aceitar" />
                      </div>
                    </div>
                </div>
              </div>

              <div class="pedidos-bg">
                <div class="pedidos-modal">
                  <i class="fas fa-times-circle" id="iconfecha" onclick="fechaModal('add')"></i>
                    <h1>Titulo do pedido</h1>
                    <p>Status do servico: aceito</p>
                    <p>Preco: 200</p>
                    <p>email para contato: carlinhosmaia@outlook.com</p>
                    
                    <div class="grid_button">
                      <button class="botao">Aceitar</button>
                      <button class="botao">Negar</button>
                      <div class="acc">
                        <input type="number" placeholder="insira o valor para aceitar" />
                      </div>
                    </div>
                </div>
              </div>


            </div> <!--pedidos_realizados-->


          </div> <!-- Fecha Comissao -->


        

          <div class="clearfix"></div>

          <script>
            function openTab(evt, contentName, idName) {
              var i, tabcontent, tablinks;
              tabcontent = document.getElementsByClassName("tabcontent");
              for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
              }
              tablinks = document.getElementsByClassName("tablinks");
              for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
              }
              document.getElementById(contentName).style.display = "block";
              evt.currentTarget.className += " active";
              document.getElementById(idName).focus();
            }
            window.onload = function() {
              document.getElementById('bt2').click();
            }

            $(function () {
              $('#imagem').change(function() {
                $('.file-name').html($(this).val().substr(12));
              });
            });
          </script>

        </div> <!--all-->
      </main>
      {% endblock div_container %}
   
      <!-- fim conteudo de perfil -->  
