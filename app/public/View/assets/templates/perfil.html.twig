{% extends "base_home.html.twig" %}
{% block perfil %}
{# document #}
   {# head #}
      {% block title %} Perfil {% endblock title %}
      {% block hrefcss %}"/GitHub/Kamaleao/app/public/View/pós_login/style/perfil.css"{% endblock hrefcss %}
      {% block srcjs %}"/GitHub/Kamaleao/app/public/View/pós_login/js/perfil.js"{% endblock srcjs %}
      <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
      
   {# endhead #}
   {# body #}
      <!-- conteudo de perfil -->
      {% block perfil_icon %}
      <div class="perfil_icon">
         <a class="icone_perf"><i class='bx bxs-user-circle'></i></a>
        
         <h1> @{{Usuario}} </h1>

         {% if Descricao != "" %}
         <p>{{Descricao}}</p>
         {% endif %}

      </div>
      {% endblock perfil_icon %}

      {% block div_container %}
      <main>
        <div class="tab">
          <div><button id="bt1" class="tablinks" onclick="openTab(event, 'Inventário', 'bt1')"> <strong>inventário</strong> </button></div>
          <div><button id="bt2" class="tablinks" onclick="openTab(event, 'Serviços', 'bt2')" autofocus> <strong>Serviços</strong></button></div>
          <div><button id="bt3" class="tablinks" onclick="openTab(event, 'Comissao', 'bt3')"> <strong>comissões</strong></button></div>
        </div>

        <div class="all">
          <!-- Inventario -->
          <div id="Inventário" class="tabcontent">
            <p> Conteúdo do Inventário </p>
          </div>
          <!-- Serviços -->
          <div id="Serviços" class="tabcontent">
              <section class="grid_home">
                <a id="adicionar" onclick="abreModal()">
                  <i class='bx bx-plus'></i>
                </a>
                <div class="item">
                  <div class="anuncio_img">
                    <div class="opacidade">
                        <i class='bx bxs-pencil'></i><br/>
                    </div>
                  </div>
                  <div class="anuncio_titulo">
                    <h1>Título do anúncio</h1>
                  </div> <!--anuncio_titulo-->
                  <div class="anuncio_user">
                    <h3>@{{Usuario}}</h3>
                  </div> <!--user-->
                  <div class="anuncio_preço">
                    <h2>R$50.000</h2>
                  </div> <!-- preço -->
                </div> <!-- item -->
              </section> <!--grid_home-->

            <div id="md-pr" class="md-ct-pos">
              <div class ="form_anuncio">
                <h1>Anunciar um Serviço</h1>
                <div class ="grid_anuncio">
                  <div class="left">
                    <p>Título do anúncio</p>
                    <input type="text" id="titulo" name="titulo" maxlength="50" placeholder="Título para o seu anúncio"/>
                    <p>Descrição do serviço</p>
                    <textarea id="descricao" name="descricao" rows="5" maxlength="280" placeholder="Descreva detalhadamente o serviço que será oferecido..."></textarea>
                    <p>Escolha uma imagem para o Anúncio:</p>
                    <label for="imagem">Escolher arquivo</label>
                    <input type="file" id="imagem" name="imagem" accept="image/png, image/jpeg"></br></br>
                    <span id="file-name"></span>                             
                  </div>
                  <div clas="rigth">
                    <p>Preço médio</p>
                    <input type="number" min="0" max="10000" id="preco" name="preco" placeholder="Preço médio para o serviço"/>
                    <p>Tipos de Licenças</p> 
                    <div class="check"><!-- checkbox para as licencas -->
                    <input type="checkbox" id="licenca1" name="licenca1" value="1">
                    <label for="licenca1">Licença de uso Não-Comercial</label><br>
                    <input type="checkbox" id="licenca2" name="licenca2" value="2">
                    <label for="licenca2">Licença de uso Comercial</label><br>
                    <input type="checkbox" id="licenca3" name="licenca3" value="3">
                    <label for="licenca3">Licença de Download</label><br>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Comissao -->
          <div id="Comissao" class="tabcontent">
            <p> Conteúdo da Comissão </p> 
          </div>

          <div class="clearfix"></div>

          <script>
            function openTab(evt, contentName, idName) {
              var i, tabcontent, tablinks;
              tabcontent = document.getElementsByClassName("tabcontent");
              for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
              }
              tablinks = document.getElementsByClassName("tablinks");
              for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
              }
              document.getElementById(contentName).style.display = "block";
              evt.currentTarget.className += " active";
              document.getElementById(idName).focus();
            }
            window.onload = function() {
              document.getElementById('bt2').click();
            }
          </script>

        </div> <!--all-->
      </main>
      {% endblock div_container %}
    
      <!-- fim conteudo de perfil -->   
   {# end body #}
{# end document #}
{% endblock perfil %}