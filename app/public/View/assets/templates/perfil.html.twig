{% extends "base_home.html.twig" %}
{% block perfil %}
{# document #}
   {# head #}
      {% block title %} Perfil {% endblock title %}
      {% block hrefcss %}"/GitHub/Kamaleao/app/public/View/pós_login/style/perfil.css"{% endblock hrefcss %}
      <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
      
   {# endhead #}
   {# body #}
      <!-- conteudo de perfil -->
      {% block perfil_icon %}
      <div class="perfil_icon">
         <a class="icone_perf"><i class='bx bxs-user-circle'></i></a>
        
         <h1> @{{Usuario}} </h1>

         {% if Descricao != "" %}
         <p>{{Descricao}}</p>
         {% endif %}

      </div>
      {% endblock perfil_icon %}

      {% block div_container %}
      <main>
        <div class="tab">
          <div><button id="bt1" class="tablinks" onclick="openTab(event, 'Inventário', 'bt1')"> <strong>inventário</strong> </button></div>
          <div><button id="bt2" class="tablinks" onclick="openTab(event, 'Serviços', 'bt2')" autofocus> <strong>Serviços</strong></button></div>
          <div><button id="bt3" class="tablinks" onclick="openTab(event, 'Comissao', 'bt3')"> <strong>comissões</strong></button></div>
        </div>

        <div class="all">
          <!-- Inventario -->
          <div id="Inventário" class="tabcontent">
            <p> Conteúdo do Inventário </p>
          </div>
          <!-- Serviços -->
          <div id="Serviços" class="tabcontent">
              <section class="grid_home">
                <a id="adicionar" href="/GitHub/Kamaleao/app/public/View/pós_login/criar_anuncio/criar_anuncio.php">
                  <i class='bx bx-plus'></i>
                </a>
                <div class="item">
                  <div class="anuncio_img">
                    <div class="opacidade">
                        <i class='bx bxs-pencil'></i><br/>
                    </div>
                  </div>
                  <div class="anuncio_titulo">
                    <h1>Título do anúncio</h1>
                  </div> <!--anuncio_titulo-->
                  <div class="anuncio_user">
                    <h3>@{{Usuario}}</h3>
                  </div> <!--user-->
                  <div class="anuncio_preço">
                    <h2>R$50.000</h2>
                  </div> <!-- preço -->
                </div> <!-- item -->
              </section> <!--grid_home-->
          </div>
          <!-- Comissao -->
          <div id="Comissao" class="tabcontent">
            <p> Conteúdo da Comissão </p> 
          </div>

          <div class="clearfix"></div>

          <script>
            function openTab(evt, contentName, idName) {
              var i, tabcontent, tablinks;
              tabcontent = document.getElementsByClassName("tabcontent");
              for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
              }
              tablinks = document.getElementsByClassName("tablinks");
              for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
              }
              document.getElementById(contentName).style.display = "block";
              evt.currentTarget.className += " active";
              document.getElementById(idName).focus();
            }
            window.onload = function() {
              document.getElementById('bt2').click();
            }
          </script>

        </div> <!--all-->
      </main>
      {% endblock div_container %}
    
      <!-- fim conteudo de perfil -->   
   {# end body #}
{# end document #}
{% endblock perfil %}