{% block document %}
<!DOCTYPE html>
<html lang="pt-br">
   <head>
      {% block head %}
      <meta http-equiv="content-type" content="text/html; charset=UTF-8">
      <title>Kamaleão - {% block title %}{% endblock title %}</title>
      <!-- Esse primeiro CSS é referente ás configurações gerais, o segundo é o css espefico que cada página terá -->
      <link rel="stylesheet" href="/GitHub/Kamaleao/app/public/View/pós_login/style/bootstrap-geral.css">
      <link rel="stylesheet" href={% block hrefcss %}{% endblock hrefcss %}>
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@500&display=swap" rel="stylesheet">
      <link rel="shortcut icon" type="image/x-icon" href="/GitHub/Kamaleao/app/public/View/assets/img/LogoKamaleao1.png" />
      <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
      <script src="https://kit.fontawesome.com/39478fd21b.js" crossorigin="anonymous"></script>
      <script src="https://kit.fontawesome.com/881bb3d101.js" crossorigin="anonymous"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <script src="/Github/Kamaleao/app/public/View/pós_login/js/bootstrap.js" type="text/javascript"></script>
      {% endblock head %}
   </head>
   <body>
   {% block body %}
      {% block topo %}
      <div class="tudo">
         {% block nav_menu %}
         <header>
            <nav class="header"> <!--<i class='bx bx-bell' id="icon_nav"></i>-->
               <img class="logo" src="/GitHub/Kamaleao/app/public/View/assets/img/LogoKamaleao1.png" alt="logo">
               <div class="search"><input type="text" placeholder="Pesquisar..."/></div>
               {% block menu %}
                  <ul class="dropdown"> <!--ENGLOBA TD-->
                     <li class="icone">
                        <a onclick="mostra('noti')" class="dropbtn"><i class='bx bx-bell' id="icon_nav"></i></a>
                        <ul id="noti" class="notificacao">
                           <li><a href="#" class="opt">notificacao 1</a></li>
                           <li><a href="#" class="opt">notificacao 2</a></li>
                           <li><a href="#" class="opt">notificacao 3</a></li>
                        </ul>
                     </li>

                     <li class="icone">
                        <a onclick="mostra('perf')" class="bt2"><i class='bx bx-user-circle' id="icon_nav"></i></a>
                        <ul id="perf" class="perfil">
                           <li><a href="#" class="opt">Ver perfil</a></li>
                           <li><a href="#" class="opt">Configurar conta</a></li>
                           <li><a href="#" class="opt">Adicionar conta +</a></li>
                           <li><a href="#" class="opt">Sair</a></li>
                        </ul>
                     </li>

                     <li class="icone">
                        <a onclick="mostra('menu')" class="bt3"><i class='bx bx-menu' id="icon_nav"></i></a>
                        <ul id="menu" class="menu">
                           <li><a href="#" class="opt">Sobre o Kamaleão</a></li>
                           <li><a href="#" class="opt">Configurações</a></li>
                           <li><a href="#" class="opt">Contato</a></li>
                           <li><a href="#" class="opt">Ajuda</a></li>
                        </ul>
                     </li>
                  </ul> <!--ENGLOBA TD-->
               {% endblock menu %}
            </nav> <!--header-->
         </header>
         {% endblock nav_menu %}
         
         {% block nav_filtro %}
         <nav class="filtro">  <!--filtro-->
            <select name="select_filtro" id="select_filtro">
               <option value="" selected="true" disabled="disabled">Filtro</option>
               <option value="">Arte Digital</option>
               <option value="">Design</option>
               <option value="">Logos</option>
               <option value="">Concept Arts</option>
               <option value="">Uso pessoal</option>
               <option value="">Uso comercial</option>
            </select>
         </nav> <!--filtro-->
         {% endblock nav_filtro %}
      </div> <!--tudo-->         
      {% endblock topo %}

         {% block perfil_icon %}{% endblock perfil_icon %}

         {% block div_container %}{% endblock div_container %}

         {% block footer %}
         <footer>
            <div class="container-footer">
               <div class="linha">
                  <div class="coluna">
                     <h4>Kameleão</h3>
                     <hr/>
                        <ul class="ul-coluna">
                           <li class="li-coluna"><a href="#">Sobre nós</a></li>
                           <li class="li-coluna"><a href="#">Políticas de Privacidade</a></li>
                           <li class="li-coluna"><a href="#">Termos de Serviço</a></li>
                        </ul>
                  </div> <!--coluna-->
                  <div class="coluna">
                     <h4>Ajuda</h3>
                     <hr/>
                        <ul class="ul-coluna">
                           <li class="li-coluna"><a href="#">FAQ</a></li>
                           <li class="li-coluna"><a href="#">Compra</a></li>
                           <li class="li-coluna"><a href="#">Venda</a></li>
                        </ul>
                  </div> <!--coluna-->
                  <div class="coluna">
                     <h4>Contato</h3>
                     <hr/>
                        <ul class="ul-icons">
                           <li class="li-icons"><i class='bx bxl-instagram'></i></li>
                           <li class="li-icons"><i class='bx bxl-twitter' ></i></li>
                           <li class="li-icons"><i class='bx bxl-facebook' ></i></li>
                           <li class="li-icons"><i class='bx bx-envelope'></i></li>
                        </ul>
                  </div> <!--coluna-->
               </div> <!--linha-->
            </div> <!--container-footer-->
         </footer>
         {% endblock footer %}
   {% endblock body %}
   </body>
</html>
{% endblock document %}